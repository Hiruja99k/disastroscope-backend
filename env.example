# DisastroScope Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# ============================================================================
# CORE CONFIGURATION
# ============================================================================

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# API Configuration
API_VERSION=2.0.0
MAX_REQUESTS_PER_MINUTE=100
PREDICTION_TIMEOUT=30

# CORS Configuration
ALLOWED_ORIGINS=*

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Railway Configuration (auto-set by Railway)
PORT=5000
RAILWAY_ENVIRONMENT=production

# Performance Tuning
WORKER_PROCESSES=1
WORKER_THREADS=1
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================

# Logging Configuration
LOG_FORMAT=json
LOG_LEVEL=INFO

# Metrics Configuration
METRICS_ENABLED=true
METRICS_INTERVAL=30

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=*

# ============================================================================
# EXTERNAL SERVICES (Future Use)
# ============================================================================

# Weather API (OpenWeatherMap)
OPENWEATHER_API_KEY=your-openweather-api-key

# Disaster Data APIs
EONET_API_KEY=your-eonet-api-key
FEMA_API_KEY=your-fema-api-key
GDACS_API_KEY=your-gdacs-api-key

# ============================================================================
# DATABASE CONFIGURATION (Future Use)
# ============================================================================

# PostgreSQL (for future database integration)
DATABASE_URL=postgresql://user:password@localhost:5432/disastroscope

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# AI MODEL CONFIGURATION (Future Use)
# ============================================================================

# Model Settings
MODEL_VERSION=2.0.0
ENSEMBLE_ENABLED=true
DEEP_LEARNING_ENABLED=false

# Training Configuration
AUTO_TRAIN_ENABLED=false
TRAINING_EPOCHS=100
BATCH_SIZE=32

# ============================================================================
# DEPLOYMENT SETTINGS
# ============================================================================

# Railway Specific
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_SERVICE_ID=your-railway-service-id

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ============================================================================
# DEVELOPMENT SETTINGS (for local development)
# ============================================================================

# Uncomment these for local development
# ENVIRONMENT=development
# DEBUG=True
# LOG_LEVEL=DEBUG
# ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
